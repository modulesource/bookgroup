/**
 * Implements Hook Menu.
 */
function bookgroup_menu() {
  $items = array();
  $items['bookgroup'] = array(
    'title' => t('Book Groups'),
    'description' => t('Manage an online Book Group'),
    'page callback' => 'bookgroup_entry',
    'access callback' => 'bookgroup_user_access',
	'access arguments' => array('bookgroup_access'),
    'type' => MENU_NORMAL_ITEM,
  );
  $items['bookgroup/dashboard'] = array(
    'title' => t('Book Groups'),
    'weight' => 10,
    'description' => 'Manage the Inventory of Imported Files and Tables.',
    'page callback' => 'bookgroup_dashboard',
    'access callback' => 'bookgroup_user_access',
	'access arguments' => array('dashboard_access'),
    'type' => MENU_DEFAULT_LOCAL_TASK,
  );
  $items['bookgroup/libraries'] = array(
    'title' => t('Libraries'),
    'weight' => 20,
    'description' => 'Manage the Inventory of Imported Files and Tables.',
    'page callback' => 'bookgroup_libraries',
    'access callback' => 'bookgroup_user_access',
	'access arguments' => array('library_access'),
    'type' => MENU_LOCAL_TASK,
  );
  $items['bookgroup/calendar'] = array(
    'title' => t('Calendar'),
    'weight' => 30,
    'description' => 'Manage the Inventory of Imported Files and Tables.',
    'page callback' => 'bookgroup_calendar',
    'access callback' => 'bookgroup_user_access',
	'access arguments' => array('calendar_access'),
    'type' => MENU_LOCAL_TASK,
  );

  return $items;
}

function bookgroup_user_access($string='', $account = NULL) {
  drupal_set_message('<pre>'.t('User Access: ').var_export($string,TRUE).
                     "\n".t('acct: ').var_export($account,TRUE).'</pre>');
  $access = TRUE;

  return $access;
}

/**
 * Initial Module Entry.
 */
function bookgroup_entry() {
  drupal_set_message(t('Got here.'));
  drupal_goto('bookgroup/dashboard');
}
/**
 * Bookgroup Dashboard
 */
function bookgroup_dashboard() {
  drupal_set_message(t('Got to Dashboard.'));
  $data = new stdClass();
  
  $form = drupal_get_form('bookgroup_dashboard_form', $data);
  return drupal_render($form);
}
function bookgroup_dashboard_form($form, &$form_state, $data) {
  $form['submit'] = array(
    '#type' => 'submit',
//    '#attributes' => array('style'=>'visibility:hidden'),
    '#value' => t('Submit'),
  );  
  return $form;
}
